<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="270dp"
    android:layout_marginBottom="60dp"
    android:background="@drawable/header_bg"
    android:gravity="bottom"
    android:id="@+id/nav_header_layout"
    android:orientation="vertical"
    android:padding="16dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/bannerProfileIcon"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_marginStart="10dp"
        android:padding="0dp"
        android:visibility="invisible"
        app:cardCornerRadius="50dp"
        app:cardElevation="4dp"
        app:strokeColor="@color/light_darken"
        app:strokeWidth="2.5dp">

        <ImageView
            android:id="@+id/bannerProfilePicture"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="centerCrop" />

    </com.google.android.material.card.MaterialCardView>


    <TextView
        android:id="@+id/bannerProfileName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="25dp"
        android:gravity="start"
        android:maxLength="20"
        android:maxLines="1"
        android:text="@string/empty_userName"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:textStyle="bold"
        android:visibility="invisible" />

    <TextView
        android:id="@+id/bannerStatusText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Hesap Onay Durumu"
        android:textColor="@color/gray"
        android:textSize="10sp"
        android:maxLines="1"
        android:textStyle="bold"
        android:visibility="invisible" />


    <TextView
        android:id="@+id/bannerProfileVerification"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginBottom="15dp"
        android:text="@string/unkown"
        android:textColor="@color/white"
        android:textSize="10sp"
        android:maxLines="1"
        android:padding="0dp"
        android:gravity="center"
        android:textStyle="bold"
        android:visibility="invisible"
         />


</LinearLayout>